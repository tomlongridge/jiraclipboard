{
  "manifest_version": 2,

  "name": "JIRA Clipboard",
  "description": "Quickly exports issue open in the current tab (or all open tabs) to the clipboard",
  "version": "1.4.2",

  "background": {
    /* env:dev */
    "scripts": ["src/background/background.js"],
    /* env:dev:end */
    /* env:prod *#/
    "scripts": ["dist/jiraclipboard.background.min.js"],
    /* env:prod:end */
    "persistent": false
  },

  "page_action": {
   "default_icon": "img/icon.png",
   "default_popup": "pages/popup.html"
  },

  "permissions": [ "tabs",
                   "storage",
                   "declarativeContent",
                   "http://*/",
                   "https://*/" ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      /* env:dev */
      "js": ["lib/jquery-3.1.1.min.js", "src/content/script.js"]
      /* env:dev:end */
      /* env:prod *#/
      "js": ["dist/jiraclipboard.content.min.js"]
      /* env:prod:end */
    }
  ],

  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true
  }
}
